<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.Resources.Styles.MyStyles">

    <!-- Explicit Style (styl nazwany) -->
    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Blue" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <!-- Impicit Style (styl niejawny) -->
    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="Green" />

        <Setter Property="FontSize">
            <Setter.Value>  
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android">
                        <OnIdiom x:TypeArguments="x:Double" Phone="16" Tablet="22" />
                    </On>

                    <On Platform="iOS">
                        <OnIdiom x:TypeArguments="x:Double" Phone="17" Tablet="24" />
                    </On>
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>