<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:m="clr-namespace:Models;assembly=Models"
            xmlns:pm="clr-namespace:MyMauiApp.PageModels"
             x:Class="MyMauiApp.Resources.Templates.DataTemplates">

    <DataTemplate x:Key="ProductHeaderTemplate">
        <Grid ColumnDefinitions="*,Auto" Padding="10">
            <Label Text="Name" Grid.Column="0" />
            <Label Text="Available" Grid.Column="1" />
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="ProductItemTemplate" x:DataType="{x:Type m:Product}">

        <Border Margin="5" >
            <Grid ColumnDefinitions="*,Auto" Padding="10">
                <Label Text="{Binding Name}" Grid.Column="0" />
                <Label Text="{Binding Available}" Grid.Column="1" >
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="TextColor" Value="Blue" />

                            <Style.Triggers>
                                <DataTrigger TargetType="{x:Type Label}" Binding="{Binding IsBelowLimit}" Value="True">
                                    <Setter Property="TextColor" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </Grid>

            <Border.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding Path=NavigateToProductCommand, Source={RelativeSource AncestorType={x:Type pm:ProductsPageModel}}}"
                    CommandParameter="{Binding}"
                    />
            </Border.GestureRecognizers>
        </Border>
        
    </DataTemplate>

  


</ResourceDictionary>