<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pm="clr-namespace:MyMauiApp.PageModels"
             x:Class="MyMauiApp.Views.Pages.ProductDetailPage"           
             x:DataType="{x:Type pm:ProductDetailPageModel}"
             Title="ProductDetailPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Product.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Zarezerwuj" Command="{Binding ReserveCommand}" />
    </VerticalStackLayout>
</ContentPage>